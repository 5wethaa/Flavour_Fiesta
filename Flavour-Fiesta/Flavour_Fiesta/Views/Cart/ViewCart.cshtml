@model List<Flavour_Fiesta.Domain.Models.CartItem>
@{
    ViewData["Title"] = "view cart";
    Layout = "_Layout";
}


@section HeaderExtras {
    <a href="/Home/Menu" class="home-button">Menu</a>
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />


<h2>Cart Items</h2>
<table class="table">
    <tr><th>Item</th><th>Quantity</th><th>Price</th><th>Action</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FoodItem.Name</td>
            @* <td>@item.Quantity</td> *@
            <td>
                <div class="quantity-container">
                    <form asp-action="UpdateQuantity" method="post">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <button class="quantity-button" name="operation" value="decrease">−</button>
                    </form>

                    <span>@item.Quantity</span>

                    <form asp-action="UpdateQuantity" method="post">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <button class="quantity-button" name="operation" value="increase">+</button>
                    </form>
                </div>
            </td>

            <td>₹@item.FoodItem.Price</td>
            <td>
                <form asp-action="RemoveFromCart" method="post">
                    <input type="hidden" name="cartItemId" value="@item.Id" />
                    <button class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Checkout" class="btn btn-success">Checkout</a>


