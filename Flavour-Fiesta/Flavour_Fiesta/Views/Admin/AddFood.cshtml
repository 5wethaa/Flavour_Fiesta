@model Flavour_Fiesta.Domain.Models.FoodItem

@{
    ViewData["Title"] = "Add Food";
    Layout = "_Layout";
}

@section HeaderExtras {
    <a href="/Admin/FoodList" class="home-button">Back to Dashboard</a>
}

@section Styles {
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="container">
    <h2>Add New Food</h2>

    <form asp-action="AddFood" method="post" enctype="multipart/form-data">
        <div>
            <label>Name:</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label>Category:</label>
            <select asp-for="Category">
                <option value="Veg">Veg</option>
                <option value="NonVeg">NonVeg</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div>
            <label>Price:</label>
            <input asp-for="Price" type="text" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div>
            <label>Quantity:</label>
            <input asp-for="Quantity" type="text" required />

            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div>
            <label>Image:</label>
            <input type="file" name="imageFile" accept="image/*" required />
            <span class="text-danger">@ViewBag.ImageError</span>
        </div>

        <button type="submit">Add</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
