@model Flavour_Fiesta.Domain.Models.Customer
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}


<title>Login - Flavour Fiesta</title>
<link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<body>
    
    <div class="container">
        <h2>User Login</h2>
        <form asp-controller="Cust" asp-action="Login" method="post">
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" required />
            </div>

            <div class="form-group">
                <label>Password:</label>
                <input type="password" name="password" required />
            </div>

            <button type="submit" class="Btn">Login</button>

            @if (ViewBag.Message != null)
            {
                <div class="error-message">@ViewBag.Message</div>
            }

            <div class="form-footer">
                <p>Don't have an account? <a href="/Cust/Register">Sign up</a></p>
            </div>
        </form>
    </div>
    

</body>
</html>
